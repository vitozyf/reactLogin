{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "exec": "babel-node",
  "execMap": {
    "js": "node --harmony babel-node"
  },
  "events": {
    "restart": ""
  },
  "watch": [
    "src/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}